# Run type checking
echo "ğŸ“ Type checking..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ Type check failed. Push aborted."
  exit 1
fi

# Run linting
echo "ğŸ§¹ Linting..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Lint check failed. Push aborted."
  exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
npm run test:unit
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Push aborted."
  exit 1
fi

