#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-push checks..."

# Run type checking
echo "ğŸ“ Type checking..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ Type check failed. Push aborted."
  exit 1
fi

# Run linting
echo "ğŸ§¹ Linting..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Lint check failed. Push aborted."
  exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
npm run test:unit
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Push aborted."
  exit 1
fi

# Build the project
echo "ğŸ—ï¸ Building project..."
npm run build
if [ $? -ne 0 ]; then
  echo "âŒ Build failed. Push aborted."
  exit 1
fi

# Copy dist files to gh-pages folder
echo "ğŸ“ Copying files to gh-pages folder..."
rm -rf gh-pages/*
cp -r dist/* gh-pages/
if [ $? -eq 0 ]; then
  echo "âœ… Files successfully copied to gh-pages folder"
else
  echo "âŒ Failed to copy files to gh-pages folder"
  exit 1
fi

echo "âœ… All pre-push checks passed!"
echo "ğŸ“¦ Build files are ready in gh-pages folder"
