#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-push checks..."

# Run type checking
echo "📝 Type checking..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "❌ Type check failed. Push aborted."
  exit 1
fi

# Run linting
echo "🧹 Linting..."
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ Lint check failed. Push aborted."
  exit 1
fi

# Run tests
echo "🧪 Running tests..."
npm run test:unit
if [ $? -ne 0 ]; then
  echo "❌ Tests failed. Push aborted."
  exit 1
fi

# Build the project
echo "🏗️ Building project..."
npm run build
if [ $? -ne 0 ]; then
  echo "❌ Build failed. Push aborted."
  exit 1
fi

# Copy dist files to gh-pages folder
echo "📁 Copying files to gh-pages folder..."
rm -rf gh-pages/*
cp -r dist/* gh-pages/
if [ $? -eq 0 ]; then
  echo "✅ Files successfully copied to gh-pages folder"
else
  echo "❌ Failed to copy files to gh-pages folder"
  exit 1
fi

echo "✅ All pre-push checks passed!"
echo "📦 Build files are ready in gh-pages folder"
