#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-push checks..."

# Run type checking
echo "📝 Type checking..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "❌ Type check failed. Push aborted."
  exit 1
fi

# Run linting
echo "🧹 Linting..."
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ Lint check failed. Push aborted."
  exit 1
fi

# Run tests
echo "🧪 Running tests..."
npm run test:unit
if [ $? -ne 0 ]; then
  echo "❌ Tests failed. Push aborted."
  exit 1
fi

# Build the project and deploy to gh-pages folder
echo "🏗️ Building project and copying to gh-pages..."
npm run build-for-deploy
if [ $? -ne 0 ]; then
  echo "❌ Build and deploy failed. Push aborted."
  exit 1
fi

echo "✅ All pre-push checks passed!"
echo "📦 Build files are ready in gh-pages folder"
